          <div class="footer-navigation-column">
            <h4 class="footer-navigation-column-title">Customer Service</h4>
            <div class="footer-navigation-list">
              {%- for link in linklists['customer-service'].links -%}
                <a href="{{ link.url }}" class="footer-navigation-link">
                  <span class="footer-navigation-link-text">{{ link.title }}</span>
